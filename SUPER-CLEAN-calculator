    <script>
        // تحديث قيمة المساحة عند تحريك السلايدر
        document.getElementById('area').addEventListener('input', function() {
            document.getElementById('areaValue').textContent = this.value + ' م²';
        });

        function calculatePrice() {
            // جمع البيانات من النموذج
            const area = parseInt(document.getElementById('area').value);
            const rooms = parseInt(document.getElementById('rooms').value);
            const cleaningType = document.getElementById('cleaningType').value;
            const frequency = parseInt(document.getElementById('frequency').value);
            
            // حساب السعر الأساسي بناء على المساحة والغرف
            let basePrice;
            
            // الأسعار الأساسية
            const roomPrices = {
                1: 250,  // استوديو
                2: 350,  // غرفتين
                3: 650,  // 3 غرف
                4: 750,  // 4 غرف
                5: 850,  // 5 غرف
                6: 900   // 6 غرف وأكثر
            };
            
            basePrice = roomPrices[rooms];
            
            // إضافة تكلفة إضافية للمساحة الكبيرة (فوق 150م)
            if (area > 150) {
                basePrice += Math.floor((area - 150) / 10) * 10;
            }
            
            // تعديل السعر حسب نوع التنظيف
            const cleaningMultipliers = {
                'normal': 1,
                'deep': 1.2,
                'move': 1.4,
                'construction': 1.6
            };
            basePrice *= cleaningMultipliers[cleaningType];
            
            // حساب الخدمات الإضافية
            let extraServicesCost = 0;
            const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
            checkboxes.forEach(checkbox => {
                extraServicesCost += parseInt(checkbox.value);
            });
            
            // حساب الخصم حسب الباقة المختارة
            const discountRates = {
                1: 0,   // مرة واحدة - بدون خصم
                2: 0.05, // مرتين في الشهر - خصم 5%
                8: 0.15  // ربع سنوي - خصم 15%
            };
            
            const discountRate = discountRates[frequency];
            
            // حساب الأسعار
            const pricePerVisit = basePrice + extraServicesCost;
            const totalBeforeDiscount = pricePerVisit * frequency;
            const discountAmount = totalBeforeDiscount * discountRate;
            const finalPrice = totalBeforeDiscount - discountAmount;
            
            // عرض النتائج
            document.getElementById('basePrice').textContent = Math.round(pricePerVisit) + ' ريال';
            document.getElementById('extraServices').textContent = extraServicesCost + ' ريال';
            document.getElementById('visitsCount').textContent = frequency + ' زيارة';
            document.getElementById('beforeDiscount').textContent = Math.round(totalBeforeDiscount) + ' ريال';
            document.getElementById('discountAmount').textContent = Math.round(discountAmount) + ' ريال ' + 
                (discountRate > 0 ? `<span class="discount-badge">${discountRate * 100}%</span>` : '');
            document.getElementById('totalPrice').textContent = Math.round(finalPrice) + ' ريال';
            document.getElementById('finalPrice').textContent = Math.round(finalPrice) + ' ريال';
            
            // إظهار حاوية النتائج
            document.getElementById('resultContainer').style.display = 'block';
            
            // Scroll to results
            document.getElementById('resultContainer').scrollIntoView({ 
                behavior: 'smooth' 
            });
        }

        // حساب أولي عند تحميل الصفحة
        window.addEventListener('load', function() {
            calculatePrice();
        });
    </script>
</body>
